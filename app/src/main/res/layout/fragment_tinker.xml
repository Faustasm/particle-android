    <!--        android:src="@drawable/tinker_logo_temp" />-->

    <FrameLayout
        android:id="@+id/instructions_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="16dp"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/flashing_progress_spinner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CEEE"
        android:visibility="gone">

        <ProgressBar
            style="@android:style/Widget.Holo.ProgressBar.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/flash_tinker_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CEEE"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:text="To enable Tinker, you need to flash the Tinker firmware to this device"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/action_device_flash_tinker"
            style="@style/p_mesh_button_style"
            android:layout_width="200dp"
            android:layout_height="56dp"
            android:text="Flash Tinker" />

    </LinearLayout>

    <TextView
        android:id="@+id/device_offline_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="(Device is offline)"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:visibility="gone" />

</RelativeLayout>