<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/teal</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">8dp</item>
        <item name="tabPaddingEnd">8dp</item>
        <item name="tabBackground">@color/default_light_background</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/teal</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/teal</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="TinkerSelectColorBox">
        <item name="android:layout_width">4dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:visibility">invisible</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="TinkerSelectButton">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">45dip</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TinkerSelectButtonBg">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TinkerProgress" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:layout_width">60dip</item>
        <item name="android:layout_height">10dip</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:indeterminate">false</item>
        <item name="android:progressDrawable">@drawable/progress_emerald</item>
    </style>

    <style name="TinkerSeekBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">150dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">10dip</item>
        <item name="android:indeterminate">false</item>
        <item name="android:progressDrawable">@drawable/progress_sunflower</item>
        <item name="android:thumb">@drawable/white_circle</item>
        <item name="android:max">255</item>
    </style>

    <style name="SparkTinkerPin" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">@string/bold_text_font_name</item>
        <item name="android:layout_width">@dimen/tinker_pin_radius</item>
        <item name="android:layout_height">@dimen/tinker_pin_radius</item>
        <item name="android:textSize">@dimen/tinker_pin_label_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/tinker_pin</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="SparkTinkerPinBG">
        <item name="android:padding">@dimen/tinker_pin_frame_padding</item>
<!--        <item name="android:layout_marginBottom">1dp</item>-->
        <item name="android:clickable">true</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/tinker_pin_frame_minwidth</item>
    </style>

    <style name="SparkTinkerPinBG.Left">
        <item name="android:layout_gravity">start|top</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="SparkTinkerPinBG.Right">
        <item name="android:gravity">end|bottom</item>
        <item name="android:layout_gravity">end|bottom</item>
    </style>

    <style name="TinkerSetup" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAppearance">@style/p_ParticleText</item>
        <item name="buttonStyle">@style/p_mesh_button_style</item>
        <item name="android:buttonStyle">@style/p_mesh_button_style</item>
        <item name="actionBarStyle">@style/TriangyActionBar</item>
    </style>

    <style name="TriangyActionBar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="background">@drawable/bg_app_bar_gradient</item>
    </style>

</resources>