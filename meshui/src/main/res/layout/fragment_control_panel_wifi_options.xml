<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEFF3"
    tools:context="io.particle.mesh.ui.controlpanel.ControlPanelWifiOptionsFragment">

    <FrameLayout
        android:id="@+id/p_controlpanel_wifi_join_new_network_frame"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/p_controlpanel_wifi_join_new_network"
            android:layout_width="match_parent"
            android:layout_height="?attr/listPreferredItemHeightSmall"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:paddingStart="?attr/listPreferredItemPaddingLeft"
            android:text="Join New Network"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_medium"
            tools:layout_height="48dp" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/p_controlpanel_wifi_inspect_current_network_frame"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/p_controlpanel_wifi_join_new_network_frame">

        <TextView
            android:id="@+id/p_controlpanel_wifi_inspect_current_network"
            android:layout_width="match_parent"
            android:layout_height="?attr/listPreferredItemHeightSmall"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:paddingStart="?attr/listPreferredItemPaddingLeft"
            android:text="Inspect Current Network"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_medium"
            tools:layout_height="48dp" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/p_controlpanel_wifi_manage_wifi_frame"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/p_controlpanel_wifi_inspect_current_network_frame">

        <TextView
            android:id="@+id/p_controlpanel_wifi_manage_wifi"
            android:layout_width="match_parent"
            android:layout_height="?attr/listPreferredItemHeightSmall"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:paddingStart="?attr/listPreferredItemPaddingLeft"
            android:text="Manage Wi-Fi credentials"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_medium"
            tools:layout_height="48dp" />

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>